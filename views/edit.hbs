<h1 class="mb-1 restaurant-show-title">編輯餐廳</h1>
<div class="container">
    <form action="/restaurants/{{restaurant.id}}?_method=PUT" method="POST">
        <div class="mb-3 mt-5 row">
            <label for="name" class="col-sm-3 col-form-label">餐廳名稱</label>
            <div class="col-sm-9">
                <input name="name" type="text" class="form-control" id="name" value="{{restaurant.name}}" required>
            </div>
        </div>

        <div class="mb-3  row">
            <label for="name_en" class="col-sm-3 col-form-label">餐廳英文名稱</label>
            <div class="col-sm-9">
                <input name="name_en" type="text" class="form-control" id="name_en" value="{{restaurant.name_en}}">
            </div>
        </div>

        <div class="mb-3  row">
            <label for="category" class="col-sm-3 col-form-label">餐廳類別</label>
            <div class="col-sm-9">
                <select name="category" class="form-control" id="category" required>
                    <option disabled selected>請選擇類別 ▼</option>
                    <option>台式料理</option>
                    <option>韓式料理</option>
                    <option>日式料理</option>
                    <option>泰國料理</option>
                    <option>美式餐廳</option>
                    <option>其他</option>
                </select>
            </div>
        </div>

        <div class="mb-3  row">
            <label for="image" class="col-sm-3 col-form-label">餐廳照片</label>
            <div class="col-sm-9">
                <input name="image" type="text" class="form-control" id="image" value="{{restaurant.image}}">
            </div>
        </div>

        <div class="mb-3  row">
            <label for="location" class="col-sm-3 col-form-label">餐廳位址</label>
            <div class="col-sm-9">
                <input name="location" type="text" class="form-control" id="location" value="{{restaurant.location}}">
            </div>
        </div>

        <div class="mb-3  row">
            <label for="phone" class="col-sm-3 col-form-label">餐廳電話</label>
            <div class="col-sm-9">
                <input name="phone" type="text" class="form-control" id="phone" value="{{restaurant.phone}}">
            </div>
        </div>

        <div class="mb-3  row">
            <label for="google_map" class="col-sm-3 col-form-label">Google地址</label>
            <div class="col-sm-9">
                <input name="google_map" type="url" class="form-control" id="google_map" value="{{restaurant.google_map}}">
            </div>
        </div>

        <div class="mb-3  row">
            <label for="rating" class="col-sm-3 col-form-label">餐廳評分</label>
            <div class="col-sm-9">
                <input name="rating" type="number" min="1" max="5" step="0.1" class="form-control" id="rating" value="{{restaurant.rating}}">
            </div>
        </div>

        <div class="mb-3  row">
            <label for="description" class="col-sm-3 col-form-label">餐廳描述</label>
            <div class="col-sm-9">
                <textarea name="description" rows="3" class="form-control" id="description">{{restaurant.description}}</textarea>
            </div>
        </div>

        <button type="submit" class="btn btn-success mb-5">修改</button>

    </form>
</div>